---
const pathname = new URL(Astro.request.url).pathname;
const currentPath = pathname.slice(1); // remove the first "/"
---

<nav class="flex gap-4">
  <a
    href="/notes"
    class={`hover:text-primary-600 dark:hover:text-primary-400 transition-colors ${currentPath.startsWith('blog') ? 'text-primary-600 dark:text-primary-400' : 'text-gray-600 dark:text-gray-400'}`}
  >
    Notes
  </a>
  <a
    href="/tags"
    class={`hover:text-primary-600 dark:hover:text-primary-400 transition-colors ${currentPath.startsWith('tags') ? 'text-primary-600 dark:text-primary-400' : 'text-gray-600 dark:text-gray-400'}`}
  >
    Tags
  </a>
  <a
    href="/about"
    class={`hover:text-primary-600 dark:hover:text-primary-400 transition-colors ${currentPath === 'about' ? 'text-primary-600 dark:text-primary-400' : 'text-gray-600 dark:text-gray-400'}`}
  >
    About
  </a>
</nav>
