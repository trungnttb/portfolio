---
import BaseLayout from '../layouts/BaseLayout.astro';

const metadata = {
  pageTitle: 'About Me',
  description: 'Fullstack Developer passionate about modern web technologies',
  type: 'about',
};
---

<BaseLayout {...metadata}>
  <div class="flex-1 flex items-center justify-center">
    <div class="max-w-2xl mx-auto px-4 text-center">
      <div class="space-y-8">
        <!-- Avatar -->
        <div class="relative inline-block">
          <div class="w-40 h-40 relative">
            <img
              src="/images/avatar.png"
              alt="Avatar"
              class="w-full h-full object-cover rounded-full ring-4 ring-gray-100 dark:ring-gray-800 shadow-2xl"
            />
            <div
              class="absolute -bottom-1 -right-1 bg-green-500 w-4 h-4 rounded-full ring-2 ring-white dark:ring-gray-900"
            >
            </div>
          </div>
          <div
            class="absolute inset-0 -z-10 bg-gradient-to-r from-primary-500/40 to-blue-500/40 rounded-full blur-2xl"
          >
          </div>
        </div>

        <!-- Content -->
        <div class="space-y-4">
          <div class="space-y-2">
            <h1 class="text-4xl font-bold text-gray-900 dark:text-gray-100">
              Trung Nguyen
              <span class="inline-block animate-wave origin-bottom-right">ðŸ‘‹</span>
            </h1>
            <p class="text-xl text-gray-600 dark:text-gray-400">Fullstack Developer</p>
          </div>

          <div class="prose dark:prose-invert max-w-none">
            <p>
              Hello! I'm a Fullstack Developer passionate about creating amazing web experiences.
              With experience in React/NextJS, Node.js and modern technologies, I always aim to
              build high-quality and user-friendly products.
            </p>
          </div>
        </div>

        <!-- Social Links -->
        <div class="flex items-center justify-center gap-6">
          <a
            href="https://github.com/trungnttb"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100 transition-colors"
            aria-label="Visit my GitHub profile"
          >
            <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path
                d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
              ></path>
            </svg>
          </a>
          <a
            href="https://linkedin.com/in/trung-nguyen-ab30bb1b6"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-gray-900 dark:text-gray-400 dark:hover:text-gray-100 transition-colors"
            aria-label="Connect with me on LinkedIn"
          >
            <svg class="w-8 h-8" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path
                d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
